{
  "name": "@talismn/util",
  "version": "0.0.2",
  "description": "A set of util functions for working with polkadot & talisman data.",
  "types": "dist/types",
  "main": "./src/index.ts",
  "browser": "./dist/index.js",
  "exports": "./dist/index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --watch src --ext js,ts --exec yarn prepublishOnly",
    "build": "esbuild-node-tsc",
    "build:types": "tsc",
    "prepublishOnly": "yarn build && yarn build:types"
  },
  "author": "Talisman",
  "license": "GPL-3.0-only",
  "peerDependencies": {
    "react": ">=17"
  },
  "dependencies": {
    "bignumber.js": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.2",
    "esbuild-node-tsc": "^1.6.1",
    "husky": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "react": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TalismanSociety/util.git"
  },
  "bugs": {
    "url": "https://github.com/TalismanSociety/util/issues"
  },
  "homepage": "https://github.com/TalismanSociety/util#readme",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,css,scss}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
