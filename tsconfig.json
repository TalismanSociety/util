{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "module": "es2020",
    "declaration": true,
    "declarationDir": "lib",
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
